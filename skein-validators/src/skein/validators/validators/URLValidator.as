    //-------------------------------------
    //  incorrectURLError
    //-------------------------------------

    private var _incorrectURLError:String = "Wrong URL address.";

    public function get incorrectURLError():String
    {
        return _incorrectURLError;
    }

    public function set incorrectURLError(value:String):void
    {
        _incorrectURLError = value;
    }

    //--------------------------------------------------------------------------
    //
    //  Overridden methods
    //
    //--------------------------------------------------------------------------

    override protected function doValidation(value:Object):Array
    {
        var results:Array = super.doValidation(value);

        if (results.length > 0)
            return results;
        else
            return validateURL(value);
    }

    //--------------------------------------------------------------------------
    //
    //  Methods
    //
    //--------------------------------------------------------------------------

    private function validateURL(value:Object):Array
    {
        var results:Array = [];

        if (required)
        {
            if (!URI_REGEXP.test(String(value)))
            {
                results.push(new ValidationResult(true, incorrectURLError))
            }
        }

        return results;
    }
